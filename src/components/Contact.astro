---
import GitHubIcon from './icon/GitHub.astro';
import LinkedInIcon from './icon/LinkedIn.astro';

const { t } = Astro.props;

// Reconstruct the socialLinks array using translated data
const socialLinks = t('contact.social').map((translatedLink, index) => {
  const originalSocialLinks = [
    {
      url: 'https://github.com/oscar22rodenas',
      icon: GitHubIcon
    },
    {
      url: 'https://www.linkedin.com/in/oscar-rodenas/',
      icon: LinkedInIcon
    },
  ];
  const originalLink = originalSocialLinks[index];

  return {
    ...originalLink,
    name: translatedLink.name,
  };
});
---
<section id="contacto" class="py-16 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">{t('contact.title')}</h2>
    <div class="max-w-xl mx-auto">
      <!-- InformaciÃ³n de contacto directo -->
      <div class="mb-8 text-center">
        <p class="text-lg mb-4">{t('contact.cta')}</p>
        <a 
          href="mailto:oscarrodenaslujan@gmail.com" 
          class="inline-flex items-center gap-1 text-primary dark:text-secondary hover:underline text-lg font-medium mr-2"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          oscarrodenaslujan@gmail.com
        </a>
        <a 
          href="tel:+34644239725" 
          class="inline-flex items-center gap-1 text-primary dark:text-secondary hover:underline text-lg font-medium ml-2"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21L9.5 13.5a11.05 11.05 0 004 4l1.293-1.293a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
          +34 644239725
        </a>
      </div>

      <!-- Formulario con Formspree -->
      <form 
        action="https://formspree.io/f/xzddbdjo" 
        method="POST"
        class="bg-white dark:bg-gray-700 rounded-lg shadow-lg p-8 space-y-6"
      >
        <div>
          <label for="name" class="block text-sm font-medium mb-2">{t('contact.name_label')}</label>
          <input
            type="text"
            id="name"
            name="name"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-primary dark:focus:ring-secondary outline-none transition"
            required
          />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium mb-2">{t('contact.email_label')}</label>
          <input
            type="email"
            id="email"
            name="email"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-primary dark:focus:ring-secondary outline-none transition"
            required
          />
        </div>
        <div>
          <label for="message" class="block text-sm font-medium mb-2">{t('contact.message_label')}</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-primary dark:focus:ring-secondary outline-none transition resize-none"
            required
          ></textarea>
        </div>
        <button
          type="submit"
          class="w-full bg-gradient-to-r from-primary to-secondary text-white py-3 rounded-lg font-medium hover:opacity-90 transition-opacity"
        >
          {t('contact.submit_button')}
        </button>
      </form>

      <div class="mt-8 flex justify-center gap-6">
        {socialLinks.map(link => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-secondary transition-colors"
            aria-label={link.name}
          >
            <link.icon class="w-6 h-6" />
            {link.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</section>