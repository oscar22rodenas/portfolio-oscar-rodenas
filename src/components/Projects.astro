---
const { t } = Astro.props;

// Reconstruct the projects array using translated data
const projects = t('projects.list').map((translatedProject, index) => {
  // Get the original project data to keep non-translatable properties like image, github, demo, featured
  // For simplicity, we assume the order in JSON matches the order in the original component
  // In a real app, you might use an ID or slug to match them
  const originalProjects = [
    {
      image: "/assets/portfoli.png",
      github: "https://github.com/oscar22rodenas/portfolio",
      featured: true,
      demo: "https://portfolio-oscarrodenas.vercel.app/" // Example demo link
    },
    {
      image: "/assets/hotel.png",
      github: "https://github.com/oscar22rodenas/proyecto_hoteles",
      demo: "https://example.com/hotel-demo"
    },
    {
      image: "/assets/logo_deal_cash.png",
      github: "https://github.com/oscar22rodenas/proyecto_subastas",
      demo: "https://example.com/auction-demo"
    }
  ];
  const originalProject = originalProjects[index];

  return {
    ...originalProject,
    title: translatedProject.title,
    description: translatedProject.description,
    technologies: translatedProject.technologies,
  };
});
---
<section id="proyectos" class="py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">{t('projects.title')}</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <article class:list={[
            "bg-white dark:bg-gray-700 rounded-lg shadow-lg overflow-hidden transition-all duration-300 hover:scale-[1.02] hover:shadow-xl",
            project.featured && "lg:col-span-2"
        ]}>
          <div class="aspect-video bg-gray-100 dark:bg-gray-600">
            <img 
              src={project.image} 
              alt={project.title}
              class="w-full h-full object-cover aspect-video border-2 border-primary dark:border-secondary"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map(tech => (
                <span class="px-3 py-1 bg-primary/10 text-primary dark:bg-secondary/10 dark:text-secondary rounded-full text-sm">
                  {tech}
                </span>
              ))}
            </div>
            <div class="flex gap-4">
              <a
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 text-primary dark:text-secondary hover:underline"
              >
                {t('projects.github_button')}
              </a>
              {project.demo && (
                <a
                  href={project.demo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center gap-2 text-primary dark:text-secondary hover:underline"
                >
                  {t('projects.demo_button')}
                </a>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>