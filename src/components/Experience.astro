---
const { t } = Astro.props;
---
<section id="experiencia" class="py-16 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">{t('experience.title')}</h2>
    <div class="max-w-4xl mx-auto space-y-12">
      {t('experience.list').map((experience, index) => (
        <div class="relative">
          {index !== t('experience.list').length - 1 && (
            <div class="absolute left-8 top-16 bottom-0 w-0.5 bg-gray-200 dark:bg-gray-700"></div>
          )}
          <div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg p-8">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="flex-grow">
                <h3 class="text-xl font-semibold mb-2">{experience.title}</h3>
                <div class="flex flex-wrap gap-4 text-sm text-gray-600 dark:text-gray-300 mb-4">
                  <span class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    {experience.company}
                  </span>
                  <span class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    {experience.period}
                  </span>
                  <span class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    {experience.location}
                  </span>
                </div>
                <p class="text-gray-700 dark:text-gray-300 mb-4">{experience.description}</p>
                <div class="space-y-4">
                  <div>
                    <h4 class="font-medium mb-2 text-primary dark:text-secondary">{t('experience.achievements_title')}</h4>
                    <ul class="list-disc list-inside space-y-2 text-gray-600 dark:text-gray-300">
                      {experience.achievements.map(achievement => (
                        <li>{achievement}</li>
                      ))}
                    </ul>
                  </div>
                  <div class="space-y-3">
                    <h4 class="font-medium text-primary dark:text-secondary">{t('experience.technologies_title')}</h4>
                    <div class="flex flex-wrap gap-2">
                      {experience.technologies.map(tech => (
                        <span class="px-3 py-1 bg-gray-100 dark:bg-gray-600 rounded-full text-sm">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </div>
                  <div class="space-y-3">
                    <h4 class="font-medium text-primary dark:text-secondary">{t('experience.skills_title')}</h4>
                    <div class="flex flex-wrap gap-2">
                      {experience.skills.map(skill => (
                        <span class="px-3 py-1 bg-primary/10 text-primary dark:bg-secondary/10 dark:text-secondary rounded-full text-sm">
                          {skill}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>