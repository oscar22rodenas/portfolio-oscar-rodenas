---
const { t } = Astro.props;
---
<section id="inicio" class="min-h-screen flex items-center justify-center pt-16">
    <div class="container mx-auto px-4 py-16">
      <div class="text-center">
        <img 
          src="/assets/profile.jpeg" 
          alt={t('hero.alt')}
          class="mx-auto rounded-full w-48 h-48 object-cover mb-8 shadow-lg border-4 border-primary dark:border-secondary"
        />
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
            {t('hero.title')}
          </span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8">
          {t('hero.description')}
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a 
            href="#contacto"
            class="inline-block bg-gradient-to-r from-primary to-secondary text-white px-8 py-3 rounded-full font-medium hover:opacity-90 transition-opacity"
          >
            {t('hero.contact_button')}
          </a>
          <a
            href="/assets/oscar_rodenas_cv.pdf" {/* Placeholder for CV PDF */}
            download
            class="inline-block border-2 border-primary dark:border-secondary text-primary dark:text-secondary px-8 py-3 rounded-full font-medium hover:bg-primary/10 dark:hover:bg-secondary/10 transition-colors"
          >
            {t('hero.cv_button')}
          </a>
        </div>
      </div>
    </div>
  </section>